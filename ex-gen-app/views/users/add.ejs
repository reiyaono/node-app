<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type"
      content="text/html"
      charset="UTF-8">
    <link rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      crossorigin="anonymous">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="container">
    <header><h1 class="display-4"><%= title %></h1></header>
    <div role="main">
      <ol class="text-danger">
        <% if (err != null) { for (let i in err.errors) { %>
        <li><%= err.errors[i].message %></li>
        <% }} %>
      </ol>
      <form method="post" action="/users/add">
        <div class="form-group">
          <labe for="name">NAME</labe>
          <input type="text" name="name" id="name" class="form-control" value="<%= form.name %>">
          <ol class="text-danger">
            <% if (err != null) { for (let i in err.get("name")) { %>
            <li><%= err.get("name")[i].message %></li>
            <% }} %>
          </ol>
        </div>
        <div class="form-group">
          <labe for="pass">PASSWORD</labe>
          <input type="password" name="pass" id="pass" class="form-control" value="<%= form.pass %>" >
          <ol class="text-danger">
            <% if (err != null) { for (let i in err.get("pass")) { %>
            <li><%= err.get("pass")[i].message %></li>
            <% }} %>
          </ol>
        </div>
        <div class="form-group">
          <labe for="age">AGE</labe>
          <td><input type="number" name="age" id="age" class="form-control"></td>
          <input type="submit" class="form-control" value="作成" value="<%= form.age %>">
          <ol class="text-danger">
            <% if (err != null) { for (let i in err.get("age")) { %>
            <li><%= err.get("age")[i].message %></li>
            <% }} %>
          </ol>
        </div>
        <input type="submit" value="作成" class="btn btn-primary">
      </form>
    </div>
  </body>
</html>
